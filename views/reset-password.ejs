<!-- Reset Password Page -->
<div class="login-container">
    <div class="login-wrapper forgot-password-wrapper">
        <div class="login-card">
            <!-- Logo/Brand Section -->
            <div class="login-header">
                <div class="logo">
                    <i class="fas fa-key"></i>
                </div>
                <h1>Reset Password</h1>
                <p>Create a new password for your account</p>
            </div>

            <!-- Reset Password Form -->
            <form id="resetPasswordForm" method="POST">
                <input type="hidden" id="resetToken" value="<%= token %>" />

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-group">
                        <i class="icon-email"></i>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            value="<%= email %>"
                            readonly
                            class="readonly-input"
                        />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">New Password</label>
                    <div class="input-group">
                        <i class="icon-lock"></i>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            placeholder="Enter new password"
                            minlength="8"
                            autocomplete="new-password"
                        />
                        <button
                            type="button"
                            class="toggle-password"
                            onclick="togglePasswordField('password', 'passwordToggle')"
                        >
                            <i id="passwordToggle" class="icon-eye"></i>
                        </button>
                    </div>
                    <small class="form-help">Password must be at least 8 characters long</small>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <div class="input-group">
                        <i class="icon-lock"></i>
                        <input
                            type="password"
                            id="confirmPassword"
                            name="confirmPassword"
                            required
                            placeholder="Confirm new password"
                            minlength="8"
                            autocomplete="new-password"
                        />
                        <button
                            type="button"
                            class="toggle-password"
                            onclick="togglePasswordField('confirmPassword', 'confirmPasswordToggle')"
                        >
                            <i id="confirmPasswordToggle" class="icon-eye"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-login">
                    <span class="btn-text">Reset Password</span>
                    <span class="btn-loading" style="display: none">
                        <span class="spinner"></span> Resetting...
                    </span>
                </button>
            </form>

            <div class="form-options text-center mt-3">
                <a href="/login" class="forgot-link">
                    <i class="fas fa-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>
