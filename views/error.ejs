<div class="error-container">
    <div class="error-content">
        <h1><%= typeof title !== 'undefined' ? title : 'Error' %></h1>
        <p>
            <%= typeof message !== 'undefined' ? message : 'An error occurred'
            %>
        </p>
        <button class="btn btn-primary" onclick="window.history.back()">
            Go Back
        </button>
    </div>
</div>
