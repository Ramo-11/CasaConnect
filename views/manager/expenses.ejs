<!-- Expense Management -->
<div class="expenses-container">
    <!-- Stats Cards -->
    <div class="expense-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="stat-content">
                <span class="stat-value">$<%= thisMonthExpenses.toFixed(2) %></span>
                <span class="stat-label">This Month</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-content">
                <span class="stat-value">$<%= totalExpenses.toFixed(2) %></span>
                <span class="stat-label">Total Expenses</span>
            </div>
        </div>
    </div>

    <!-- Expenses Table -->
    <div class="card">
        <div class="card-header">
            <h3>All Expenses</h3>
                <button class="btn btn-primary" onclick="openAddExpenseModal()">
                <i class="fas fa-plus"></i> Add Expense
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="expenses-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Unit</th>
                            <th>Category</th>
                            <th>Receipt</th>
                            <th>Added By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (expenses && expenses.length > 0) { %>
                            <% expenses.forEach(expense => { %>
                                <tr data-expense-id="<%= expense._id %>">
                                    <td><%= new Date(expense.date).toLocaleDateString() %></td>
                                    <td class="expense-amount">$<%= expense.amount.toFixed(2) %></td>
                                    <td><%= expense.description || '-' %></td>
                                    <td>
                                        <% if (expense.unit) { %>
                                            <span class="unit-badge"><%= expense.unit.unitNumber %></span>
                                        <% } else { %>
                                            <span class="text-muted">General</span>
                                        <% } %>
                                    </td>
                                    <td><span class="category-badge category-<%= expense.category %>"><%= expense.category %></span></td>
                                    <td>
                                        <% if (expense.receipt) { %>
                                            <button class="btn-icon" onclick="viewReceipt('<%= expense.receipt %>')" title="View Receipt">
                                                <i class="fas fa-file-invoice"></i>
                                            </button>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td class="text-muted">
                                        <% if (expense.addedBy) { %>
                                            <%= expense.addedBy.firstName %> <%= expense.addedBy.lastName %>
                                        <% } else { %>
                                            -
                                        <% } %>
                                    </td>
                                    <td>
                                        <button class="btn-icon text-danger" onclick="deleteExpense('<%= expense._id %>')" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No expenses recorded</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Expense Modal -->
<div id="addExpenseModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Add Expense</h2>
            <button class="modal-close" onclick="closeAddExpenseModal()">&times;</button>
        </div>
        <form id="addExpenseForm" enctype="multipart/form-data">
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group">
                        <label for="expenseAmount">Amount ($) *</label>
                        <input type="number" id="expenseAmount" name="amount" required min="0" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="expenseDate">Date *</label>
                        <input type="date" id="expenseDate" name="date" required value="<%= new Date().toISOString().split('T')[0] %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="expenseDescription">Description</label>
                    <input type="text" id="expenseDescription" name="description" placeholder="Brief description of expense">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="expenseUnit">Unit</label>
                        <select id="expenseUnit" name="unit">
                            <option value="none">General Expense (No Unit)</option>
                            <% units.forEach(unit => { %>
                                <option value="<%= unit._id %>">Unit <%= unit.unitNumber %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="expenseCategory">Category</label>
                        <select id="expenseCategory" name="category">
                            <option value="maintenance">Maintenance</option>
                            <option value="repair">Repair</option>
                            <option value="utilities">Utilities</option>
                            <option value="supplies">Supplies</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="expenseReceipt">Receipt (Optional)</label>
                    <input type="file" id="expenseReceipt" name="receipt" accept="image/*,.pdf">
                    <small class="form-help">Upload receipt image or PDF (Max 10MB)</small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeAddExpenseModal()">Cancel</button>
                <button type="submit" class="btn btn-primary">
                    <span class="btn-text">Add Expense</span>
                    <span class="btn-loading" style="display: none;">
                        <span class="spinner"></span> Adding...
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>