<!-- Login Page -->
<div class="login-container">
    <div class="login-wrapper">
        <div class="login-card">
            <!-- Logo/Brand Section -->
            <div class="login-header">
                <div class="logo">
                    <i class="fas fa-building"></i>
                </div>
                <h1>Sahab PM</h1>
                <p>Property Management Portal</p>
            </div>

            <!-- Login Form -->
            <form id="loginForm" method="POST" action="/auth/login">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-group">
                        <i class="icon-email"></i>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder="Enter your email"
                            autocomplete="email"
                        />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <i class="icon-lock"></i>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            required
                            placeholder="Enter your password"
                            autocomplete="current-password"
                        />
                        <button type="button" class="toggle-password" onclick="togglePassword()">
                            <i class="icon-eye" id="passwordToggle"></i>
                        </button>
                    </div>
                </div>

                <div class="form-options">
                    <a href="/auth/forgot-password" class="forgot-link">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-login">
                    <span class="btn-text">Sign In</span>
                    <span class="btn-loading" style="display: none">
                        <span class="spinner"></span> Signing in...
                    </span>
                </button>
            </form>

            <!-- Error/Success Messages -->
            <% if (locals.error) { %>
            <div class="alert alert-danger mt-3"><%= error %></div>
            <% } %> <% if (locals.success) { %>
            <div class="alert alert-success mt-3"><%= success %></div>
            <% } %>
        </div>

        <!-- Building/Property Info -->
        <div class="login-info">
            <h2>Property Management System</h2>

            <div class="role-info">
                <div class="role-section">
                    <h3><i class="fas fa-users"></i> For Tenants</h3>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> Pay rent securely online</li>
                        <li><i class="fas fa-check"></i> Submit maintenance requests</li>
                        <li><i class="fas fa-check"></i> View lease documents</li>
                        <li><i class="fas fa-check"></i> Track payment history</li>
                        <li><i class="fas fa-check"></i> Communicate with management</li>
                    </ul>
                </div>

                <div class="role-section">
                    <h3><i class="fas fa-cogs"></i> For Managers</h3>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> Manage all properties & units</li>
                        <li><i class="fas fa-check"></i> Oversee tenant accounts & leases</li>
                        <li><i class="fas fa-check"></i> Handle service requests</li>
                        <li><i class="fas fa-check"></i> Generate reports & analytics</li>
                        <li><i class="fas fa-check"></i> Coordinate maintenance teams</li>
                    </ul>
                </div>
            </div>

            <div class="contact-info">
                <p><strong>Emergency Maintenance:</strong> (555) 123-4567</p>
                <p><strong>Office Hours:</strong> Mon-Fri 9AM-5PM</p>
            </div>
        </div>
    </div>
</div>
