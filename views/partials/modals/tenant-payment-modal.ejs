<div class="modal" id="paymentModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Make Payment</h2>
            <button class="modal-close" onclick="closePaymentModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="payment-summary">
                <h3>Payment Amount</h3>
                <div class="amount-display">
                    <span class="currency">$</span>
                    <span class="amount-value" id="paymentAmount">0.00</span>
                </div>
            </div>

            <form id="confirmPaymentForm">
                <div class="form-group">
                    <label>Select Payment Method</label>
                    <div id="savedPaymentMethods">
                        <!-- Will be populated with saved methods -->
                    </div>
                </div>

                <div class="no-payment-methods" style="display: none;">
                    <p>No payment methods saved.</p>
                    <a href="/tenant/settings" class="btn btn-secondary">
                        Go to Settings to Add Payment Method
                    </a>
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="confirmPaymentBtn">
                    <span class="btn-text">Confirm Payment</span>
                    <span class="btn-loading" style="display: none;">
                        <span class="spinner"></span> Processing...
                    </span>
                </button>
            </form>
        </div>
    </div>
</div>