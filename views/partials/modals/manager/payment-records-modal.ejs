<!-- Payment Records Modal -->
<div id="paymentRecordsModal" class="modal">
    <div class="modal-content" style="max-width: 95%; width: 95%;">
        <div class="modal-header">
            <h2>Payment Records - <span id="recordsYear"></span></h2>
            <button type="button" class="modal-close" onclick="closePaymentRecordsModal()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="records-controls">
                <select id="yearSelector" class="filter-select" onchange="loadPaymentRecords(this.value)">
                    <% const currentYear = new Date().getFullYear(); %>
                    <% for(let y = currentYear; y >= currentYear - 5; y--) { %>
                        <option value="<%= y %>" <%= y === currentYear ? 'selected' : '' %>><%= y %></option>
                    <% } %>
                </select>
                <button class="btn btn-primary" onclick="exportPaymentRecords()">
                    <i class="fas fa-download"></i> Export CSV
                </button>
            </div>
            
            <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                <table class="payment-records-table">
                    <thead>
                        <tr>
                            <th>Unit</th>
                            <th>Tenant</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Rent</th>
                            <th>Jan</th>
                            <th>Feb</th>
                            <th>Mar</th>
                            <th>Apr</th>
                            <th>May</th>
                            <th>Jun</th>
                            <th>Jul</th>
                            <th>Aug</th>
                            <th>Sep</th>
                            <th>Oct</th>
                            <th>Nov</th>
                            <th>Dec</th>
                        </tr>
                    </thead>
                    <tbody id="paymentRecordsBody">
                        <tr>
                            <td colspan="17" class="text-center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <div class="records-legend">
                <span class="legend-item"><span class="payment-box paid"></span> Paid in Full</span>
                <span class="legend-item"><span class="payment-box partial"></span> Partial Payment</span>
                <span class="legend-item"><span class="payment-box due"></span> Due/Not Paid</span>
                <span class="legend-item"><span class="payment-box inactive"></span> Inactive/Not Applicable</span>
            </div>
        </div>
    </div>
</div>

<style>
.payment-records-table {
    width: 100%;
    font-size: 14px;
}

.payment-records-table th {
    position: sticky;
    top: 0;
    background: white;
    z-index: 10;
}

.payment-box {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    text-align: center;
    font-size: 12px;
    font-weight: 600;
    min-width: 60px;
}

.payment-box.paid {
    background: #10b981;
    color: white;
}

.payment-box.partial {
    background: #f59e0b;
    color: white;
}

.payment-box.due {
    background: #ef4444;
    color: white;
}

.payment-box.inactive {
    background: #1f2937;
    color: white;
}

.records-controls {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
}

.records-legend {
    display: flex;
    gap: 20px;
    margin-top: 20px;
    justify-content: center;
    flex-wrap: wrap;
}

.records-legend .payment-box {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}
</style>